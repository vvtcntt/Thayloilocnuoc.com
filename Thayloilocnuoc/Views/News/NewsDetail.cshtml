@{
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}
@model Thayloilocnuoc.Models.tblNew
<div id="Contents">
    <div class="nVar_Product">
        <nav>@Html.Raw(ViewBag.nUrl)</nav>
    </div>
    <div class="Clear"></div>
    <div id="News">
        <div id="ContentNews">
          
                <div id="LeftNews">
                    <div class="nVar_news">
                        <h1>@Model.Name</h1>
                        <div><span class="Cate"><span></span>@Html.Raw(ViewBag.name)</span><span class="Cata"><span></span>Thời gian gửi: @Model.DateCreate</span><span class="Account"><span></span>@Html.Raw(ViewBag.User)</span> </div>
                </div>
                <div class="Description">@Model.Description</div>
                @Html.Raw(ViewBag.chuoitab)
                <div class="ContentNew">
                    @Html.Raw(Model.Content)
                </div>
                <div class="Author">
                    <span>Bản quyền bài viết : VINCOM VIỆT NAM</span>
                </div>
                <div class="Clear"></div>
                @Html.Raw(ViewBag.tabsnews)
                <div id="Comment">
                    <div class="nVar_2">
                        <span>Nhận xét đánh giá</span>
                    </div>
                    <div id="Sluion">
                        <div class="Mxh" style="float: left; width: 270px; margin-left: 2px">
                            <div class="fb-like" data-send="true" data-layout="button_count" data-width="60"
                                 data-show-faces="true">
                            </div>
                             
                            <div id="g" style="float: left; margin: 7px 5px; height: 15px; width: 20px">
                                <g:plusone size="medium"></g:plusone>
                            </div>
                        </div>
                    </div>
                    <div id="review">
                        <span class="rv2">Mời bạn đánh giá bài viết @Model.Name</span>
                        <div id="Content_review">
                            <input type="radio" name="review" value="1" class="rd1" /> <img src="~/Content/Display/iCon/rating_1_rstar.gif" alt="1 điểm" />
                            <input type="radio" name="review" value="2" class="rd2" /><img src="~/Content/Display/iCon/rating_2_rstar.gif" alt="2 điểm" />
                            <input type="radio" name="review" value="3" class="rd3" /><img src="~/Content/Display/iCon/rating_3_rstar.gif" alt="3 điểm" />
                            <input type="radio" name="review" value="4" class="rd4" /><img src="~/Content/Display/iCon/rating_4_rstar.gif" alt="4 điểm" />
                            <input type="radio" name="review" value="5" class="rd5" /><img src="~/Content/Display/iCon/rating_5_rstar.gif" alt="5 điểm" />
                        </div>
                    </div>
                    <div id="ConmentFacebook"><div class="fb-comments" data-href="@Request.Url.ToString()" data-num-posts="20" style="width:100%; float:left; margin:0px"></div></div>
                </div>
                <div class="Clear"></div>

            </div>
         
                <div id="RightNews">
                    <div class="nVar_1">
                        <span>Chuyên mục chính</span>
                    </div>
                    <div class="ListMenu">
                        <a href="/2/Tin-tuc" title="Tin tức">› Tin tức</a>
                        <a href="/2/Tuyen-dung" title="Tuyển dụng">› Tuyển dụng</a>
                        <a href="#" title="Khuyến mại" rel="nofollow">› Bản tin khuyến mại</a>
                        <a href="/Dai-ly-cua-VINCOM" title="Hệ thống phân phối">› Đại lý của VINCOM</a>

                    </div>
                    @{Html.RenderAction("Tintuclienquan", "News");}
                    @{Html.RenderAction("Boxfacebook", "News");}
                </div>
        </div> 
    </div>
    <div class="Clear"></div>
</div>
@if(Request.Browser.IsMobileDevice)
{
    
}
else
{ <script src="~/Content/Display/Js/Scroll.js"></script>}

